{
  "ConnectionStrings": {
    "PostgresConnection": "host=localhost;database=blazor_boilerplate;user id=postgres;password=password123",
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=blazor_boilerplate;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SqlLiteConnectionFileName": "data.db"
  },

  "HostingOnAzure": {
    "RunsOnAzure": false,
    "RunningAsAppService": true,
    "RunningAsDocker": false, // not implementet yet
    "AzureKeyVault": {
      "UsingKeyVault": true,
      "UseManagedAppIdentity": true, // not implementet yet: assigning a managed identity to the app and giving that identity permissons to access contents of the key vault
      "AppKey": "", // not implementet yet: adding AppKey and AppSecret to the app. Then assigning permissions to these credentials inside the key vault
      "AppSecret": "",
      "VaultURI": "https://YOURVAULTNAMEHERE.vault.azure.net/",
      "CertificateName": "AuthSample"
    }
  },

  "ExternalAuthProviders": {
    "Google": {
      "Enabled": false,
      "ClientId": "qwerty123.apps.googleusercontent.com",
      "ClientSecret": "qwerty123"
    }
  },

  "BlazorBoilerplate": {
    "ApplicationUrl": "https://blazorboilerplate.com",
    "RequireConfirmedEmail": false,
    "APILogging": {
      "Enabled": true,
      "IgnorePaths": [ "/api/userprofile" ]
    },
    "UseSqlServer": true,
    "UseSqlLite": false,
    "UsePostgresServer": false,
    "IS4ApplicationUrl": "https://blazorboilerplate.com",
    "UseLocalCertStore": "true",
    "CertificateThumbprint": "PutYourSSLThumbPrintHere"
  },
  "TemplateFileProviderOptions": {
    "TemplateLocationPath": "SET Location!!!!!",
  },
  "EmailClientOptions": {
    "ServerUrl": "https://localhost:5001"
  },
  "EmailConfiguration": {
    "FromName": "Blazor Boilerplate",
    "FromAddress": "email@domain.com",
    "ReplyToAddress": "email@domain.com",
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 465,
    "SmtpUseSSL": true,
    "SmtpUsername": "email@domain.com",
    "SmtpPassword": "PASSWORD",
    "PopServer": "smtp.gmail.com",
    "PopPort": 995,
    "PopUseSSL": true,
    "PopUsername": "email@domain.com",
    "PopPassword": "PASSWORD",
    "ImapServer": "imap.gmail.com",
    "ImapPort": 993,
    "ImapUseSSL": true,
    "ImapUsername": "email@domain.com",
    "ImapPassword": "PASSWORD"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSQLServer" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        // If you're not using mssql as a backend db either remove this section or just make sure that the target connection string is not blank
        // Does not throw exception if connection string is invalid, only if it doesn't exist
        "Name": "MSSqlServer", // see https://github.com/serilog/serilog-sinks-mssqlserver/blob/dev/README.md for additional config options
        "Args": {
          "connectionString": "DefaultConnection",
          "tableName": "Logs", // Table Defined in BlazorBoilerplate.Shared/DataModels/Logs.cs
          "autoCreateSqlTable": false,
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5
        }
      }
    ]
  },
  "ForgetPassword": {
    "SubjectTemplate": "Blazor Boilerplate Forgot your Passord? [{UserName}]",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <h3>Dear {name},</h3>\r\n  <p>\r\n    You requested for a password reset, kindly use this <a href=\"{callbackUrl}\">link</a> to reset your password.\r\n  </p>\r\n  <br/>\r\n  <p>Cheers!</p>\r\n </div>",
  },
  "NewUserConfirmationEmail": {
    "SubjectTemplate": "Welcome {UserName} to Blazor Boilerplate",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <p>Hello {userName},</p>\r\n  <p>\r\n    Please confirm your account by: <a href='{callbackUrl}'>clicking this link.</a>\r\n  </p>\r\n  <p>\r\n    <strong>UserId:</strong> {userId}<br />\r\n    <strong>Token:</strong> {token}<br/>\r\n  </p>\r\n  <p>Thank you, and welcome to the Blazor Boilerplate</p>\r\n</div>"
  },
  "NewUserEmail": {
    "SubjectTemplate": "Welcome {UserName} to Blazor Boilerplate",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <p>Hello {fullName},</p>\r\n  <p>\r\n    You have been added as a new user to <a href=\"https://blazorboilerplate.com\" target=\"_blank\">https://blazorboilerplate.com</a> Below are your new credentials.\r\n  </p>\r\n  <p>\r\n    User Name: {userName}<br />\r\n    Email: {email}<br />\r\n    Password: {password}\r\n  </p>\r\n  <ul>\r\n    <li>\r\n      Please save this email to refer to your login credentials.\r\n    </li>\r\n    <li>\r\n      You can log in using the <a href=\"https://blazorboilerplate.com/account/login\">link provided here.</a>\r\n    </li>\r\n  </ul>\r\n  <p>\r\n    <br />\r\n  </p>\r\n  <p>Thank you, and welcome aboard the Blazor Boilerplate</p>\r\n</div>\r\n"
  },
  "NewUserNotificationEmail": {
    "SubjectTemplate": "A new user [{UserName}] has registered on Blazor Boilerplate",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <p>Hello {name},</p>\r\n  <p>\r\n    A new user has been added as a new user to <a href=\"https://blazorboilerplate.com\" target=\"_blank\">blazorboilerplate.com</a>\r\n  </p>\r\n  <p>\r\n    Created by {creator}<br/>\r\n    Company: {company}<br/>\r\n    Roles: {roles}<br/>\r\n    Name: {name}<br/>\r\n    User Name: {userName}<br/>>\r\n    Email: {email}<br/>\r\n  </p>\r\n  <p>\r\n    <br />\r\n  </p>\r\n  <p>Regards,</p>\r\n  <p>Blazor Boilerplate Team</p>\r\n</div>"
  },
  "PasswordReset": {
    "SubjectTemplate": "Blazor Boilerplate Password Reset for {UserName}",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <h3>Dear {userName},</h3>\r\n  <p>Your password has been successfully reset, you can now login with your new password.</p>\r\n  <br/>\r\n  <div>\r\n    Cheers!\r\n  </div>\r\n</div>"
  },
  "PlainTextTestEmail": {
    "SubjectTemplate": "subject",
    "BodyTemplate": "Hello,\r\nThis email was sent using the plain text test email template.\r\nThe test was on {date}.\r\n\r\nRegards,\r\nBlazor Boilerplate Template"
  },
  "TestEmail": {
    "SubjectTemplate": "subject",
    "BodyTemplate": "<div>\r\n  <h1>\r\n    <img style=\"width:100px; vertical-align: middle;\" src=\"https://blazorboilerplate.com/images/logo.png\" alt=\"Blazor Boilerplate\"/> Blazor Boilerplate\r\n  </h1>\r\n  <p>Hello {user},</p>\r\n  <p>\r\n    This is a <strong>TEST</strong> email. If you are using Blazor Boilerplate please <a href=\"https://github.com/enkodellc/blazorboilerplate\">star the repo on Github</a>.\r\n    We are looking for more contributors to grow the project. There are several areas of improvement needed and if you are using the repo in your project please submit your PR's or suggestions.\r\n  </p>\r\n  <p>\r\n    Join our <a href=\"https://gitter.im/blazorboilerplate/community\">chat on Gitter</a> to disucss future project features, timelines and to get involved.\r\n  </p>\r\n  <p>The email was on {testDate}.</p>\r\n  <p>\r\n    <br />\r\n  </p>\r\n  <p>Regards,</p>\r\n  <p>Blazor Boilerplate Email Template</p>\r\n</div>"
  },
  "AllowedHosts": "*"
}
